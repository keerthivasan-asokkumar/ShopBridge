@model int

<td style="width: 150px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="Product" class="btn btn-dark" asp-route-id="@Model">Edit</a>
        <a asp-action="Details" asp-controller="Product" class="btn btn-light" asp-route-id="@Model">Details</a>
        <a asp-action="Delete" asp-controller="Product" class="btn btn-warning" id="delete" asp-route-id="@Model" onclick="functionDelete(@Model)">Delete</a>
    </div>

</td>