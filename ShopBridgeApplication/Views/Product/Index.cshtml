@using ShopBridgeApplication.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h3 class="text-info"> Product List</h3>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">Add New Product</a>
    </div>
</div>
<br />

<div>
    <table class="table border">
        <tr class="table-info">
            <th>
                <h5>Product Image</h5>
            </th>
            <th>
                <h5>Product Name</h5>
            </th>
            <th>
                <h5>Description</h5>
            </th>
            <th>
                <h5>Price</h5>
            </th>
            <th>
                <h5>Stock</h5>
            </th>
        </tr>
        @foreach (var items in Model)
        {
    <tr>
        <td>
            <img src="~/images/@items.ProductImage" alt="@items.ProductName" height="60" width="60" />
        </td>
        <td>
            @items.ProductName
        </td>
        <td>
            @items.Description
        </td>
        <td>
            Rs. @items.Price
        </td>
        <td>
            @items.UnitsAvailable
        </td>
        <td>
            <partial name="_ButtonPartial" model="@items.ProductId" />
        </td>
    </tr>
        }
    </table>

</div>


